extends ../layouts/default

block content
  div.jumbotron.metrics
    h1 Metrics
    - if (listings.length)
      select.form-control.listings-dropdown
        option(value="None")
          | Select a listing
        - each listing in listings
          option(value=listing._id)
            = listing.universalName
      div.year-radio
        input(type="radio", name="year", value="2013", checked)
        label 2013
        input(type="radio", name="year", value="2012")
        label 2012
        input(type="radio", name="year", value="2011")
        label 2011
        br
      div.graph-radio
        input(type="radio", name="graph", value="Bar", checked)
        label Bar Graph
        input(type="radio", name="graph", value="Pie")
        label Pie Graph
        input(type="radio", name="graph", value="Comments/Ratings")
        label Comments/Ratings Graphs
      div.comments-radio
        input.comments-bar-radio(type="radio", name="comments", value="Bar")
        label Bar Graph
        input.comments-line-radio(type="radio", name="comments", value="Line")
        label Line Graph
      div.compare-checkboxes
        input.compareViews-checkbox(type="checkbox", name="compare", value="views")
        label.compareViews-label Views
        input.compareDownloads-checkbox(type="checkbox", name="compare", value="downloads")
        label.compareDownloads-label Downloads
- else
      p.muted No metrics.&nbsp;


block scripts
  script(src='/js/graphsApp.js')
